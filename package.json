{
	"name": "vscode-dhall-lsp-server",
	"displayName": "vscode-dhall-lsp-server",
	"description": "An LSP protocol implementation for the Dhall programming language",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.29.0"
	},
	"categories": [
		"Programming Languages", "dhall", "lsp"
	],
	"activationEvents": [
		"onLanguage:dhall"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "dhall",
				"extensions": [".dhall"]
			}
		],
		"configuration": {
			"type": "object",
			"title": "Dhall LSP Configuration",
			"properties": {
				"languageServerExample.executable": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Path to the dhall-lsp-server executable"
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"vscode": "^1.1.25",
		"vscode-languageclient": "^4.4.0"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
